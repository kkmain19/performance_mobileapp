<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/button_enabled_color"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/total_ordered_items_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="@string/default_price"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:transitionName="totalOrderedItemsPriceTransition" />

        <TextView
            android:id="@+id/total_ordered_items_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="@string/your_order_default_items"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:transitionName="totalOrderedItemsTransition" />
    </LinearLayout>

    <Button
        android:id="@+id/place_order_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/montserrat_semi_bold"
        android:padding="15dp"
        android:text="@string/place_order"
        android:textAllCaps="false"
        android:textColor="@color/text_dark_color" />

</LinearLayout>